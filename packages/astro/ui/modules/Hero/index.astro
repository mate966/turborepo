---
import type { HeroProps } from './types';

export interface Props extends HeroProps {}

const { title, subtitle } = Astro.props;
---

<div class="m-hero py-[100px]">
    <h2 class="m-hero__title">{title}</h2>
    {subtitle && <div class="m-hero__subtitle">{subtitle}</div>}
</div>

<style>
    .m-hero {
        margin: 100px 0;
    }

    h2 {
        color: red;
    }
</style>
