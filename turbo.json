{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**", ".astro/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^lint"],
            "inputs": ["$TURBO_DEFAULT$", ".eslintrc*"]
        },
        "type-check": {
            "dependsOn": ["^type-check"],
            "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"]
        },
        "clean": {
            "cache": false
        }
    }
}
